{
  "name": "pinpatch",
  "private": true,
  "version": "0.0.0",
  "description": "Pinpatch monorepo",
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "pre-commit": "pnpm lint && pnpm typecheck && pnpm test",
    "prepare": "simple-git-hooks",
    "clean": "turbo run clean",
    "test:e2e": "pnpm --filter @pinpatch/test-app test:e2e"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pre-commit"
  }
}
