{
  "name": "@pinpatch/ui",
  "version": "0.1.3",
  "description": "Shared React UI primitives and styles for Pinpatch apps.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alex1craig/pinpatch.git"
  },
  "keywords": [
    "pinpatch",
    "ui",
    "react",
    "components",
    "tailwind"
  ],
  "type": "module",
  "exports": {
    "./globals.css": "./src/globals.css",
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "require": "./dist/components/*.cjs"
    },
    "./lib": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.cjs"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js",
      "require": "./dist/lib/*.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "components.json"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo 'lint not configured'",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "radix-ui": "^1.4.3",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  }
}
